<br />
<h1 class = "text-center">My Games</h1>
<br />
<div class = "col-4 offset-4">
  <hr />
</div>
<br />
<div class = "text-center booyah-box col-4 offset-4 form-background dash-head">
  <br />
  <h3>Currently Playing</h3>
  <br />
</div>
<div class = "row">
  <% @games.each do |game| %>
    <% if current_user && current_user.cp?(game) %>
      <br />
      <div class = "booyah-box col-4 col-sm-2 text-center">
        <%= link_to game_path(game), :title => "#{game.title}" do %>
          <br />
          <div class = "gamebox-art"></div>
          <% if game.humanized_platform.present? %>
            <%= game.humanized_platform %>
          <% end %>
          <% if game.humanized_genres.present? %>
            <%= game.humanized_genres %>
          <% end %>
          <br />
          <%= game.developer %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
<br /><hr /><br />
<div class = "text-center booyah-box col-4 offset-4 form-background dash-head">
  <br />
  <h3>Want to Play</h3>
  <br />
</div>
<div class = "row">
  <% @games.each do |game| %>
    <% if current_user && current_user.wtp?(game) %>
      <br />
      <div class = "booyah-box col-4 col-sm-2 text-center">
        <%= link_to game_path(game), :title => "#{game.title}" do %>
          <br />
          <div class = "gamebox-art"></div>
          <% if game.humanized_platform.present? %>
            <%= game.humanized_platform %>
          <% end %>
          <% if game.humanized_genres.present? %>
            <%= game.humanized_genres %>
          <% end %>
          <br />
          <%= game.developer %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
<br /><hr/><br />
<div class = "text-center booyah-box col-4 offset-4 form-background dash-head">
  <br />
  <h3>Have Played</h3>
  <br />
</div>
<div class = "row">
  <% @games.each do |game| %>
    <% if current_user && current_user.hp?(game) %>
      <br />
      <div class = "booyah-box col-4 col-sm-2 text-center">
        <%= link_to game_path(game), :title => "#{game.title}" do %>
          <br />
          <div class = "gamebox-art"></div>
          <% if game.humanized_platform.present? %>
            <%= game.humanized_platform %>
          <% end %>
          <% if game.humanized_genres.present? %>
            <%= game.humanized_genres %>
          <% end %>
          <br />
          <%= game.developer %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
