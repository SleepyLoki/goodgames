<br />
<h1 class = "text-center">My Games</h1>
<br /><br />
<% @games.each do |game| %>
  <% if current_user.cps.count == 0 %>
    <%= link_to 'Search for Games', search_games_path %>
  <% elsif current_user && current_user.cp?(game) %>
    <br />
    <div class = "text-center booyah-box col-4 offset-4">
      <%= link_to game.title, game_path(game) %>
      <br />
      <% if game.humanized_platform.present? %>
        <%= game.humanized_platform %>
      <% end %>
      <% if game.humanized_genres.present? %>
        <%= game.humanized_genres %>
      <% end %>
      <br />
      <%= game.developer %>
    </div>
  <% end %>
<% end %>