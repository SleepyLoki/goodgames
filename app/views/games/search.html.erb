<h1>Search for games to add to your collection!</h1>
<br /><br />

<%= form_tag(search_games_path, method: :get) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<br /><br />

<div class = "row">
  <% @games.each do |game| %>
    <br />
    <div class = "booyah-box col-12 col-sm-2 text-center">
      <br/>
      <%= link_to game_path(game), :title => "#{game.title}" do %>
      <br /><br />
      <div class = "gamebox-art"></div>
      <br />
      <% if game.humanized_platform.present? %>
        <%= game.humanized_platform %>
      <% end %>
      <br />
      <% if game.humanized_ratings.present? %>
        <%= game.humanized_ratings %>
      <% end %>
      <br /><br />
    </div>
    <% end %>
  <% end %>
</div>
<br /><br />
