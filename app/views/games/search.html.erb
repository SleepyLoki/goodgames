<div class = "text-center">
  <br /><br />
  <h1>Browse for games to add to your Library!</h1>
  <br /><br />

  <%= form_tag(search_games_path, method: :get) do %>
    <%= text_field_tag :term %>
    <%= submit_tag 'Search', name: nil, class: "btn btn-info btn-sm" %>
  <% end %>
</div>

<br /><hr /><br />

<div class = "row">
  <% @games.each do |game| %>
    <br />
    <div class = "booyah-box col-12 col-sm-2 text-center">
      <br/>
      <%= link_to game_path(game), :title => "#{game.title}" do %>
      <%= game.title.truncate(25) %>
      <br /><br />
      <div>
        <div>
          <% game.photos.each do |photo| %>
            <% if photo.feature_Photo.nil? %>
              <%= image_tag photo.feature_Photo.url, class: 'feature-image' %>
              
            <% else %>
              <%= image_tag photo.feature_Photo.url, class: 'search-image' %>
            <% end %>
          <% end %>
        </div>
      </div>
      <br />
      <% if game.humanized_platform.present? %>
        <%= game.humanized_platform %>
      <% end %>
      <br />
      <% if game.humanized_ratings.present? %>
        <%= game.humanized_ratings %>
      <% end %>
      <br /><br />
    </div>
    <% end %>
  <% end %>
</div>
<br /><br />
