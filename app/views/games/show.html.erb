<% @game.photos.each do |photo| %>
  <%= image_tag photo.picture.url %>
<% end %>

<script>
  setVideoId(@game.youtubeLink);
</script>
<br />
<div id = "player"></div>
<br />
<br />
<div class="booyah-box col-10 offset-1">
  <br />
  <div>
    <div class = "text-center game-title">
      <%= @game.title %>
    </div>
    <div class = "text-center">
      <br/>
      <% if current_user && current_user.cp?(@game) %>
        <%= link_to 'Remove from Currently Playing', game_cp_path(@game), class: 'btn btn-danger', method: :delete %>
      <% else %>
        <%= link_to 'Currently Playing', game_cps_path(@game), class: 'btn btn-secondary', method: :post %>
      <% end %>
      <br/>
      <% if @photo.picture_limit?(@game) %>
        Photo Limit has been reached
      <% else %>
        <!-- Photo Button trigger modal -->
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2">
          Add a Picture
        </button>
      <% end %>
    </div>
  </div>
  <br/>
</div>
<br /><hr><br />

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="9"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <img class="d-block img-fluid" src="s3://goodgames-bucket/uploads/photo/picture/1/" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Fourth slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Fifth slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Sixth slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Seventh slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Eighth slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Nineth slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="..." alt="Tenth slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<br /><hr ><br />
<div class = "booyah-box col-10 offset-1 game-info">
  <br/>
  <i><%= @game.description %></i>
  <br/><br/>
  <% if @game.humanized_platform.present? %>
    <%= @game.humanized_platform %>
  <% end %>
</div>

<br/>
<hr/>
<br />
<!-- Photo Modal -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a Photo</h4>
      </div>
      <%= simple_form_for @photo, url: game_photos_path(@game) do |f| %>
        <div class="modal-body">
          <%= f.input :picture %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add Picture", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Comment Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a Comment</h4>
      </div>
      <%= simple_form_for @comment, url: game_comments_path(@game) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Post Comment", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class = "col-10 offset-1">
  <h1 class = "float-left">Comments</h1>
  <!-- Comment Button trigger modal -->
  <button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#myModal">
    Add a Comment
  </button>
  <br /><br/>
</div>
<br/><br />

<div class = "row">
  <% @game.comments.each do |comment| %>
    <div class = "col-12 col-sm-6">
      <blockquote>
        <small><%= comment.user.first_name %></small><br/>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
      </blockquote>
    </div>
  <% end %>
</div>

<script src="assets/javascripts/youtubeScript.js"></script>